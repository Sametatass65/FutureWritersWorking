
@{
    ViewData["Title"] = "Index";
}

@model List<Product>;
<a asp-controller="product" asp-action="Add" asp-route-id="@Model">Add</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>UnitPrice</th>
            <th>UnitsInStock</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.UnitsInStock</td>
                <td><a asp-controller="product" asp-action="Remove" asp-route-id="@item.Id">Sil</a></td>
                <td><a asp-controller="product" asp-action="Update" asp-route-id="@item.Id">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

